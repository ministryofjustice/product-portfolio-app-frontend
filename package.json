    "dev": "nodemon server.js --config ./package.json",
    "build": "./bin/build-css",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "jest"
  },
  "engines": {
    "node": "^14",
    "npm": "^6"
  },
  "author": "Steven Wilson ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/product-portfolio-app-frontend"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.5.1"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^15.11.1",
    "cache-manager": "^3.3.0",
    "compression": "^1.7.4",
    "contentful": "^9.1.10",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-cache-middleware": "^1.0.1",
    "govuk-frontend": "^4.0.1",
    "helmet": "^3.22.0",
    "nocache": "^3.0.1",
    "node-sass-middleware": "^1.0.1",
    "nodemon": "^2.0.15",
    "nunjucks": "^3.2.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
